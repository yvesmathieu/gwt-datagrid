  xmlns:c="urn:import:com.google.gwt.user.cellview.client"
  xmlns:our="urn:import:com.ippon.formation.gwt.client.widget">

  <g:HTMLPanel width="100%" height="100%">
  	<div>
	    <!-- DataGrid. -->
	   	<c:DataGrid ui:field='dataGrid' visible="true"/>
